<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FDFFFF" /> <!-- light blue color when pressed -->
            <corners android:radius="25dp"/>
            <stroke android:width="4dp" android:color="@color/dark_blue" /> <!-- blue stroke border of 4dp -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#4FAAEF" /> <!-- White color by default -->
            <corners android:radius="25dp"/>
            <stroke android:width="0dp" android:color="#000000" /> <!-- Black stroke border of 4dp -->
        </shape>
    </item>
</selector>