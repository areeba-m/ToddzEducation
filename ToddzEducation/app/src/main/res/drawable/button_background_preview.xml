<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8E3E3"/> <!-- Slightly darker shade for the pressed state -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F8F3F3"/> <!-- New default color for the button -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>