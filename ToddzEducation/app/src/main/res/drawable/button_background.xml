<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC"/> <!-- Color for pressed state -->
            <corners android:radius="16dp"/> <!-- Rounded corners for the button -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F8F3F3"/> <!-- Default color for the button -->
            <corners android:radius="16dp"/> <!-- Rounded corners for the button -->
        </shape>
    </item>
</selector>