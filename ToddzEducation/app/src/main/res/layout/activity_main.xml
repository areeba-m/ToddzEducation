<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_blue"
        android:fontFamily="@font/maven_pro_medium"
        android:padding="10dp"
        android:text="@string/science"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="1dp"
        android:background="@color/_blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:indeterminate="false"
            android:max="10"
            android:minWidth="200dp"
            android:minHeight="25dp"
            android:progress="7"
            android:progressTint="#FFFFFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/maven_pro_medium"
            android:gravity="center"
            android:text="@string/_7_10"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/maven_pro_medium"
            android:padding="60dp"
            android:text="@string/which_animal_lays_eggs"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignEnd="@+id/textView4"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="137dp"
            android:background="@drawable/timer"
            android:baselineAligned="false"
            android:fontFamily="@font/maven_pro_medium"
            android:gravity="top|center"
            android:padding="25dp"
            android:text="@string/_60"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="310dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/maven_pro_medium"
                android:padding="10dp"
                android:textOn="@string/dog"
                android:textOff="@string/dog"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ToggleButton
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/maven_pro_medium"
                android:padding="10dp"
                android:textOn="@string/cat"
                android:textOff="@string/cat"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ToggleButton
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/maven_pro_medium"
                android:padding="10dp"
                android:textOn="@string/duck"
                android:textOff="@string/duck"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:strokeWidth="5dp" />

            <ToggleButton
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/maven_pro_medium"
                android:padding="10dp"
                android:textOn="@string/sheep"
                android:textOff="@string/sheep"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RadioGroup>
        <!--<Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/maven_pro_medium"
            android:padding="10dp"
            android:text="@string/dog"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/maven_pro_medium"
            android:padding="10dp"
            android:text="@string/cat"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/maven_pro_medium"
            android:padding="10dp"
            android:text="@string/duck"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:strokeWidth="5dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/maven_pro_medium"
            android:padding="10dp"
            android:text="@string/sheep"
            android:textColor="@color/black"
            android:textSize="20sp" />-->

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="4dp"
            android:onClick="openResults"
            android:background="@drawable/nextbtn_icon"
            android:contentDescription="@string/next_question"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="300dp"
            android:background="@drawable/previousbtn_icon"
            android:contentDescription="@string/previous_question"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btnHint"
            android:layout_width="67dp"
            android:layout_height="59dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/hint_icon"
            android:contentDescription="@string/hint"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/audiobtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/textView4"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="290dp"
            android:background="@drawable/sound_icon"
            android:contentDescription="@string/audio"
            android:scaleType="centerInside"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>